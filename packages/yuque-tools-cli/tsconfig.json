{
  "extends": "@artus/tsconfig",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "outDir": "dist",
    "sourceMap": false,
    "inlineSourceMap": false,
    "noUnusedLocals": false,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "declaration": false,
    "importHelpers": true,
    "esModuleInterop": true,
    "rootDir": "./src",
    "removeComments": true
  },

  "include": ["./src/**/*", "./sdk.d.ts", "typings.d.ts"]
}
